<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btnTransparent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"/>

        <TextView
            android:id="@+id/tvAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_weight="9"
            android:textColor="@color/font_white"
            android:text="Alarma"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_weight="1"
            android:src="@drawable/ic_save"/>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <CheckBox
            android:id="@+id/chkLunes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Lu"/>
        <CheckBox
            android:id="@+id/chkMartes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Ma"/>
        <CheckBox
            android:id="@+id/chkMiercoles"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Mi"/>
        <CheckBox
            android:id="@+id/chkJueves"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Ju"/>
        <CheckBox
            android:id="@+id/chkViernes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Vi"/>
        <CheckBox
            android:id="@+id/chkSabados"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Sa"/>
        <CheckBox
            android:id="@+id/chkDomingos"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/list_dia_margin"
            android:layout_marginBottom="@dimen/list_dia_margin"
            android:focusable="false"
            android:text="Do"/>
    </LinearLayout>

</LinearLayout>