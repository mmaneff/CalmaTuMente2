<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="@color/borderColorPrimary" />
            <gradient android:angle="-90" android:startColor="@color/btnColorTertiaryStart" android:endColor="@color/btnColorTertiaryEnd"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="@color/borderColorPrimary" />
            <solid android:color="@color/btnColorTertiaryStart"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="@color/borderColorPrimary" />
            <gradient android:angle="-90" android:startColor="@color/btnColorTertiaryStart" android:endColor="@color/btnColorTertiaryEnd" />
        </shape>
    </item>
</selector>