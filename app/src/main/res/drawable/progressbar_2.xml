<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:useLevel="false"
                android:thicknessRatio="10" >

                <solid android:color="#990012" />
            </shape>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:useLevel="true"
            android:thicknessRatio="14.0">

            <gradient
                android:startColor="#CBE69D"
                android:endColor="#CBE69D"
                android:centerColor="#CBE69D"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="30%"
            android:pivotY="30%"
            android:toDegrees="360" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="14.0">

                <rotate
                    android:fromDegrees="270"
                    android:toDegrees="360"
                    android:pivotX="30%"
                    android:pivotY="30%" />

                <gradient
                    android:startColor="#93CA35"
                    android:endColor="#93CA35"
                    android:centerColor="#93CA35"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>
